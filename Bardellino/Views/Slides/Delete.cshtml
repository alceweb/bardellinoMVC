@model Bardellino.Models.Slide

@{
    ViewBag.Title = "Delete";
}

<h2>Cancella immagine di sfondo</h2>
<hr />
<div class="row table-sfondi">
    <div class="col col-md-6">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Posizione)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Posizione)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Testo)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Testo)
            </dd>

        </dl>


    </div>
    <div class="col col-md-6">
        <img src="@Url.Content("~/Content/Immagini/Slide/" + Model.Immagine)" />
    </div>
</div>
<div>
    <hr />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Cancella" class="btn btn-danger" />
            @Html.ActionLink("Annulla", "Index", null, new { @class = "btn btn-success" })
        </div>
    }


</div>
