@model Bardellino.Models.Servizi

@{
    ViewBag.Title = "Delete";
}

<h2>Cancella servizio</h2>

<h3>Sei sicuro di cancellare il servizio?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Servizio)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Servizio)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Descrizione)
        </dt>

        <dd>
            @Html.Raw(Model.Descrizione)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Pubblica)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Pubblica)
        </dd>

    </dl>
